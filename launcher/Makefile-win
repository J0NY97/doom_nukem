NAME = launcher
SRCS = \
	./main.c \
	./play.c \
	./editor.c \
	./settings.c \
	./map.c \
	./help.c \

OBJS = $(SRCS:.c=.o)

LIB_FOLDER	= ../libs
SDL_DIR		:= $(LIB_FOLDER)/SDL
SDL_INC		:= -I$(SDL_DIR)/include
SDL_LIB_DIR	:= -L$(SDL_DIR)/lib
SDL_LIB		:= -lSDL2 -lSDL2_ttf -lSDL2_image

INCLUDES = \
	-I$(LIB_FOLDER)/libft \
	-I$(LIB_FOLDER)/libpf \
	-I$(LIB_FOLDER)/libui_v3 \
	-I$(LIB_FOLDER)/libbxpm \
	$(SDL_INC) \

LIB_FOLDERS = \
	-L$(LIB_FOLDER)/libft \
	-L$(LIB_FOLDER)/libpf \
	-L$(LIB_FOLDER)/libui_v3 \
	-L$(LIB_FOLDER)/libbxpm \
	$(SDL_LIB_DIR) \

LIB = $(SDL_LIB) -lui -lpf -lft -lbxpm

FLAGS = -Wall -Wextra

all: $(NAME)

ODIR = .
CDIR = .

$(ODIR)/%.o: $(CDIR)/%.c
	@gcc -c $< -o $@ -MMD -O3 \
		$(INCLUDES) $(LIB_FOLDERS) $(LIB) $(FLAGS)
	@printf $(YELLOW)"\e[F\e[JCompiling $<\n"$(RESET)

$(NAME): $(SRCS)
	@gcc -O3 -o $(NAME) $(SRCS) $(INCLUDES) $(LIB_FOLDERS) $(LIB) $(FLAGS)
	@echo "$(NAME) was successfully created."

clean:
	@rm -f $(OBJS)
	@echo "$(NAME) was cleaned."

fclean:
	@rm -f $(NAME)
	@echo "$(NAME) was fcleaned."

re: fclean $(LIBS) all

.PHONY: clean, all, re, fclean

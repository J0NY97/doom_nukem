
RED		:= "\e[0;31m"
GREEN	:= "\e[0;32m"
YELLOW	:= "\e[0;33m"
BLUE	:= "\e[0;34m"
MAGENTA	:= "\e[0;35m"
CYAN	:= "\e[0;36m"
RESET	:= "\e[0m"

SDL_DIR		:= ../SDL_Frameworks
SDL_MAIN	:= -I$(SDL_DIR)/SDL2.framework/Headers -F$(SDL_DIR)
SDL_IMAGE	:= -I$(SDL_DIR)/SDL2_image.framework/Headers -F$(SDL_DIR)
SDL_TTF		:= -I$(SDL_DIR)/SDL2_ttf.framework/Headers -F$(SDL_DIR)

RAW	=	bui_element.c \
       	bui_slider.c \
	   	bui_draw.c \
       	bui_event_handler.c \
	   	bui_key_check.c \
       	bui_libui.c \
       	bui_preset.c \
       	bui_text.c \
       	bui_text_other.c \
       	bui_text_pos.c \
       	bui_window.c \
       	dir_open.c \
       	load_image.c \
       	bui_quit.c \
       	bui_draw_circle.c \
       	bui_draw_line.c \
       	bui_render0.c \
       	bui_render1.c \
       	bui_render.c \
       	bui_mouse.c \
       	bui_events.c \
       	bui_input.c \
       	bui_image.c \
       	bui_set.c \
       	bui_get.c \
       	bui_print.c \
       	bui_edit.c \
	   	bui_fps.c \
	   	bui_color.c \
       	bui_preset_console.c \
       	bui_preset_dropdown.c \
       	bui_preset_menu.c \
       	bui_preset_scrollbar.c \
       	bui_preset_slider.c \
       	bui_preset_tab.c \
       	help.c

NAME = libui.a
CDIR = .
IDIR = -I . -I../libpf -I../libft $(SDL_MAIN) $(SDL_IMAGE) $(SDL_TTF)
ODIR = objs
SRCS = $(addprefix $(CDIR)/, $(RAW))
OBJS = $(addprefix $(ODIR)/, $(RAW:.c=.o))
CFLAGS =  -MMD -O3

all: $(NAME)
	@printf ${GREEN}"\e[J> $(NAME) ready!\n"${RESET}

$(ODIR):
	@mkdir -p $(ODIR)

$(ODIR)/%.o: $(CDIR)/%.c
	@printf $(YELLOW)"\e[JCompiling $<\n\e[F"$(RESET)
	@gcc -c $< -o $@ $(CFLAGS) $(IDIR)

$(NAME): $(ODIR) $(OBJS)
	@ar rc $(NAME) $(OBJS)
	@ranlib $(NAME)

clean: 
	@printf ${CYAN}"[INFO] Removing objs.\n"${RESET}
	@rm -rf $(ODIR)

fclean: clean
	@printf ${CYAN}"[INFO] Removing $(NAME)\n"${RESET}
	@rm $(NAME)

re: fclean all

.PHONY: fclean all clean re $(NAME)

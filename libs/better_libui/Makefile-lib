NAME = better_libui.a
SRCS = \
       ./bui_element.c \
       ./bui_menu.c \
       ./bui_slider.c \
       ./bui_event_handler.c \
       ./bui_libui.c \
       ./bui_render.c \
       ./bui_preset.c \
       ./bui_text.c \
       ./bui_window.c \
       ./bui_render_the_event.c \
       ./dir_open.c \
       ./load_image.c \
       ./bui_quit.c \
       ./help.c
OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(SRCS)
	@gcc -c $(SRCS) \
		-I ../ft_printf-windows -L ../ft_printf-windows ../ft_printf-windows/libprintf.a \
		-I ../libft-windows -L ../libft-windows ../libft-windows/libft.a \
		-I ../include -L ../lib -l SDL2 -l SDL2_ttf -l SDL2_image 
	@ar rc $(NAME) $(OBJS)
	@ranlib $(NAME)
	@rm -rf $(OBJS)
	@echo "$(NAME) was successfully created."

clean:
	@/bin/rm -f $(OBJS)
	@echo "$(NAME) was cleaned."

fclean: clean
	@/bin/rm -f $(NAME)

re: fclean all

.PHONY: clean, all, re, fclean

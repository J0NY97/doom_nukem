NAME = test
SRCS = ./main.c \
       ./bui_element.c \
       ./bui_menu.c \
       ./bui_slider.c \
       ./bui_event_handler.c \
       ./bui_libui.c \
       ./bui_preset.c \
       ./bui_text.c \
       ./bui_window.c \
       ./dir_open.c \
       ./load_image.c \
       ./bui_quit.c \
       ./bui_render.c \
       ./help.c
OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(SRCS)
	@gcc -o $(NAME) $(SRCS) \
		-I../ft_printf -L../ft_printf -lprintf \
		-I../libft -L../libft -lft \
		-I../SDL2/includes -L../SDL2/lib -lSDL2 -lSDL2_ttf -lSDL2_image 
	@echo "$(NAME) was successfully created."

clean:
	@rm -f $(OBJS)
	@echo "$(NAME) was cleaned."

fclean: clean
	@rm -f $(NAME)

re: fclean all

.PHONY: clean, all, re, fclean
